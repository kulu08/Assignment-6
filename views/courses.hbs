<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- Spacer -->
            <br>
            
            <!-- Header for the Courses page -->
            <h2>Courses</h2>
            
            <!-- Link to add a new course -->
            <a href="/courses/add" class="btn btn-success float-end">Add New Course</a>
            <hr />
            
            <!-- Table for displaying the list of courses -->
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <!-- Table headers -->
                            <th>Course Code</th>
                            <th>Course Description</th>
                            <th></th> <!-- New column for the remove button -->
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Loop through each course and display its details -->
                        {{#each courses}}
                        <tr>
                            <!-- Course Code with a link to course details -->
                            <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                            <!-- Course Description with a link to students enrolled in the course -->
                            <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                            <!-- Remove button for deleting a course -->
                            <td><a href="/course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <!-- Message displayed if there are no courses -->
            {{#unless courses}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
            {{/unless}}
        </div>
    </div>
</div>
