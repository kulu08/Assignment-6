<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- Spacer -->
            <br>
            
            <!-- Header displaying the course description -->
            <h2>{{course.courseDescription}}</h2>
            <hr />
            
            <!-- Form for updating course details -->
            <form action="/course/update" method="POST">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <!-- Input field for the course code -->
                            <label for="courseCode">Course Code</label>
                            <input class="form-control" id="courseCode" name="courseCode" type="text" value="{{course.courseCode}}" />
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">
                            <!-- Input field for the course description -->
                            <label for="courseDescription">Course Description</label>
                            <input class="form-control" id="courseDescription" name="courseDescription" type="text" value="{{course.courseDescription}}" />
                        </div>
                    </div>
                </div>
                
                <hr />
                
                <!-- Hidden input field to hold the course ID -->
                <input type="hidden" name="courseId" value="{{course.courseId}}">
                
                <!-- Submit button to update the course details -->
                <button type="submit" class="btn btn-primary float-right">Update Course</button>
            </form>
        </div>
    </div>
</div>
